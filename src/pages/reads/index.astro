---
import { SITE } from "@config";
import Reads from "@layouts/Reads.astro";
import getSortedReads from "@utils/getSortedReads";
import getPageNumbers from "@utils/getPageNumbers";

import { getCollection } from "astro:content";

const reads = await getCollection("reads");

const sortedPosts = getSortedReads(reads);

const totalPages = getPageNumbers(sortedPosts.length);

const paginatedPosts = sortedPosts.slice(0, SITE.postPerPage);
---

<Reads posts={paginatedPosts} pageNum={1} totalPages={totalPages.length} />
