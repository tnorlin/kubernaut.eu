---
import { getCollection } from "astro:content";
import Posts from "@layouts/Tils.astro";
import getSortedPosts from "@utils/getSortedTils";
import getPagination from "@utils/getPagination";

const posts = await getCollection("tils");

const sortedPosts = getSortedPosts(posts);

const pagination = getPagination({
  posts: sortedPosts,
  page: 1,
  isIndex: true,
});
---

<Posts {...pagination} />
